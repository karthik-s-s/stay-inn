<div class="container-fluid table-responsive" style="height: 100vh; ">
<table class="table align-middle mb-0 bg-white  ">
  <thead class="bg-light">
    <tr>
      <th>No</th>
      <th>Hotel</th>
      <th>Type</th>
      <th>check In</th>
      <th>Check Out</th>
      <th>Price</th>
      <th>Status</th>
      <th>No of People</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each fullBooking}}
      <tr>
        <td>
          <div class="d-flex align-items-center">

            <div class="ms-3">
              <p class="fw-bold mb-1">{{inc @index}}</p>
            </div>
          </div>
        </td>
        <td>
          <div class="d-flex align-items-center">

            <div class="ms-3">
              <p class="fw-bold mb-1">{{this.bookingdetails.user}}</p>
            </div>
          </div>
        </td>

        <td>
          <div class="d-flex align-items-center">

            <div class="ms-3">
              <p class="fw-bold mb-1">{{this.bookingdetails.type}}</p>
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal mb-1">{{this.bookingdetails.checkIn}}</p>
          {{! <p class="text-muted mb-0">IT department</p> }}
        </td>
        <td>
          <p class="fw-normal mb-1">{{this.bookingdetails.checkOut}}</p>

          {{! active not active status <span class="badge badge-success rounded-pill d-inline">Active</span> }}
        </td>
        <td>{{this.bookingdetails.total}}

        </td>
        <td>
          {{#if this.bookingdetails.bookstatus}}
            <span
              class="badge badge-success rounded-pill d-inline"
            >{{this.bookingdetails.status}}</span>
          {{else}}
            <span
              class="badge badge-danger rounded-pill d-inline"
            >Cancelled</span>
          {{/if}}

        </td>
        <td>
          <p class="fw-normal mb-1">{{this.bookingdetails.count}}</p>
        </td>

        <td>
          
          {{#if this.bookingdetails.bookstatus}}
          {{#if this.bookingdetails.cancel}}
            <a
              href="/cancelbooking/{{this.bookingdetails.bookingId}}"
              class="btn btn-danger"
              onclick="return confirm('Are you Sure ?')"
            >Cancel </a>

            {{else if this.bookingdetails.active}}
            <h4>Active</h4>
            {{else}}
          <h4>Checked Out</h4>
         {{/if}}
         {{/if}}

        </td>

      </tr>
    {{/each}}

  </tbody>
</table>
</div>