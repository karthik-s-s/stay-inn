<!-- Page Preloder -->
<div id="preloder">
  <div class="loader"></div>
</div>

<!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>

<!-- Offcanvas Menu End -->

<!-- Room Details Slider Begin -->
<div class="room-details-slider">
  <div class="container">
    <div class="room__details__pic__slider owl-carousel">
      <div class="room__details__pic__slider__item set-bg">
        <img src="/room-image/{{room.rooms.roomId}}(1).jpg" alt="" /></div>
      <div class="room__details__pic__slider__item set-bg">
        <img src="/room-image/{{room.rooms.roomId}}(2).jpg" alt="" /></div>
      <div class="room__details__pic__slider__item set-bg">
        <img src="/room-image/{{room.rooms.roomId}}(3).jpg" alt="" /></div>
      {{! <div
        class="room__details__pic__slider__item set-bg"
        data-setbg="images/rooms/details/rd-4.jpg"
      ></div> }}
    </div>
  </div>
</div>
<!-- Room Details Slider End -->

<!-- Rooms Details Section Begin -->
<section class="room-details spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="room__details__content">
          {{!-- <div class="room__details__rating">
            <div class="room__details__hotel">
              <span>Hotel</span>
              <div class="room__details__hotel__rating">
                <span class="icon_star"></span>
                <span class="icon_star"></span>
                <span class="icon_star"></span>
                <span class="icon_star"></span>
                <span class="icon_star-half_alt"></span>
              </div>
            </div>

          </div> --}}
          <div class="room__details__title">
            <h2>{{room.user}}</h2>
            <a href="/book?id={{room.rooms.roomId}}" class="primary-btn">Book
              Now</a>
          </div>
          <div class="room__details__desc">
            <h2>Price:
              <span
                style="font-size: xx-large;font-weight: bold; text-decoration: line-through; color: red;"
              > {{room.rooms.originalprice}}</span></h2>
            <h2>Offer Price:
              <span style="font-size: xx-large;font-weight: bold;">
                {{room.rooms.price}}</span></h2>

          </div>
          <div class="room__details__desc">
            <h2>Description:</h2>
            <p>{{room.rooms.description}}</p>

          </div>
          <div class="row">

            <div class="col-lg-6 col-md-6 col-sm-6">
              <div class="room__details__more__facilities">
                <h2>Most popular facilities:</h2>
                <div class="row">
                  <div class="col-lg-6">

                    <div class="room__details__more__facilities__item">
                      {{#if room.rooms.amenities.ac}}
                        <div class="icon"><img
                            src="images/rooms/details/facilities/fac-1.png"
                            alt=""
                          /></div>
                        <h6>Air Conditioning</h6>
                      {{/if}}
                    </div>
                    <div class="room__details__more__facilities__item">
                      {{#if room.rooms.amenities.tv}}
                        <div class="icon"><img
                            src="images/rooms/details/facilities/fac-2.png"
                            alt=""
                          /></div>
                        <h6>Cable TV</h6>
                      {{/if}}
                    </div>
                    {{! <div class="room__details__more__facilities__item">
                      <div class="icon"><img
                          src="images/rooms/details/facilities/fac-3.png"
                          alt=""
                        /></div>
                      <h6>Free drinks</h6>
                    </div> }}
                    <div class="room__details__more__facilities__item">
                      {{#if room.rooms.amenities.wifi}}
                        <div class="icon"><img
                            src="images/rooms/details/facilities/fac-4.png"
                            alt=""
                          /></div>
                        <h6>Unlimited Wifi</h6>
                      {{/if}}
                    </div>
                  </div>
                  <div class="room__details__more__facilities__item">
                    {{#if room.rooms.amenities.food}}
                      <div class="icon"><img
                          src="images/rooms/details/facilities/fac-5.png"
                          alt=""
                        /></div>
                      <h6>Restaurant</h6>
                    {{/if}}
                  </div>
                  <div class="room__details__more__facilities__item">
                    {{#if room.rooms.amenities.service}}
                      <div class="icon"><img
                          src="images/rooms/details/facilities/fac-6.png"
                          alt=""
                        /></div>
                      <h6>Service 24/7</h6>
                    {{/if}}
                  </div>
                  <div class="room__details__more__facilities__item">
                    {{#if room.rooms.amenities.pool}}
                      <div class="icon"><img
                          src="images/services/services-2.png"
                          alt=""
                        /></div>
                      <h6>Swimming Pool</h6>
                    {{/if}}
                  </div>
                  <div class="room__details__desc">
                    <h2>Address:</h2>
                    <p>{{room.rooms.address.state}}</p>
                    <p>{{room.rooms.address.district}}</p>
                    <p>{{room.rooms.address.location}}</p>
                    <p>{{room.rooms.number}}</p>
                    <p></p>
                  </div>
                 

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/javascripts/owl.carousel.min.js"></script>
<script src="/javascripts/jquery.slicknav.js"></script>
<script src="/javascripts/main.js"></script>
<!-- Rooms Details Section End -->