<!-- Page Preloder -->
<div id="preloder">
  <div class="loader"></div>
</div>

<!-- Offcanvas Menu Begin -->
<div class="offcanvas-menu-overlay"></div>

<div class="breadcrumb-option set-bg" data-setbg="images/breadcrumb-bg.jpg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="breadcrumb__text">
          <h1>Our Room</h1>
          <div class="breadcrumb__links">
            <a href="./index.html">Home</a>
            <span>Rooms</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Rooms Section Begin -->
<section class="rooms spad">
  <div class="container">
    
    {{#each sortedRoom}}
    
      <div class="row">

        <div class="col-lg-6 p-0 order-lg-2 order-md-2 col-md-6">
          <div class="room__pic__slider owl-carousel">

            <div class="room__pic__item "><img
                src="/room-image/{{this.rooms.roomId}}(1).jpg"
                alt=""
              />
            </div>
            <div class="room__pic__item "><img
                src="/room-image/{{this.rooms.roomId}}(2).jpg"
                alt=""
              />
            </div>
          

          </div>

        </div>
        <div class="col-lg-6 p-0 order-lg-1 order-md-1 col-md-6">
          <div class="room__text">
            <h3>{{this.user}}</h3>
            <h2><sup>â‚¹</sup>{{this.rooms.price}}<span>/day</span></h2>
            <ul>
              {{!-- <li><span>Category:</span>{{this.rooms.category}}</li> --}}
              <li><span>Type:</span>{{this.rooms.type}}</li>
              {{! <li><span>Bed:</span>King Beds</li> }}

              <li>
                <span>Services:</span>{{#if this.rooms.amenities.wifi}}
                  <i class="bi bi-wifi"></i>&nbsp;&nbsp;
                {{/if}}
                {{#if this.rooms.amenities.service}}
                  <i class="fa fa-car" aria-hidden="true"></i>&nbsp;&nbsp;

                {{/if}}
                {{#if this.rooms.amenities.food}}
                  <i class="fa fa-cutlery" aria-hidden="true"></i>&nbsp;&nbsp;

                {{/if}}
                {{#if this.rooms.amenities.pool}}
                  <i class="bi bi-water"></i>&nbsp;&nbsp;
                {{/if}}
                {{#if this.rooms.amenities.tv}}
                  <i
                    class="fa fa-television"
                    aria-hidden="true"
                  ></i>&nbsp;&nbsp;

                {{/if}}
                {{#if this.rooms.amenities.ac}}
                  <i class="bi bi-snow2"></i>&nbsp;&nbsp;
                {{/if}}
              </li>
              <li><span>Place</span>{{this.rooms.address.district}}</li>
            </ul>
            <a href="/viewroom?id={{this.rooms.roomId}}">View Details</a>
          </div>
        </div>
     

      </div>
    {{/each}}
   
  </div>

</section>
<script src="/javascripts/owl.carousel.min.js"></script>
<script src="/javascripts/jquery.slicknav.js"></script>
<script src="/javascripts/main.js"></script>