                            </select>
                            <span class="select-arrow"></span>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-sm-6 dates" >
                          
                          <div class="form-group">
                            <span class="form-label">Check In</span>
                            <input required name="checkIn" class="form-control" type="text" autocomplete="off" id="user1"  />
                          </div>
                        </div>
                        <div class="col-sm-6 dates">
                          <div class="form-group">
                            <span class="form-label">Check out</span>
                            <input required name="checkOut" class="form-control" type="text" autocomplete="off" id="user2"   />
                          </div>
                        </div>
                      </div>




                      <div class="row">
                        <div class="col-sm-4">
                          
                          <div class="form-group">
                            <span class="form-label">Rooms</span>
                            <select required name="roomnocount" id="inputroom-no" class="form-control" >
                              <option value="">Select</option>
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                            </select>
                            <span class="select-arrow"></span>
                          </div>
                        </div>
                        <div class="col-sm-4">
                          <div class="form-group">
                            <span class="form-label">Guests</span>
                            <select required name="count" id="input-count" class="form-control">
                              <option value="">Select</option>
                            </select>
                            <span class="select-arrow"></span>
                          </div>
                        </div>
                      </div>
                      <script>
                        var one = [1,2];
                        var two =[1,2,3,4];
                        var three =[1,2,3,4,5,6];
                        $("#inputroom-no").change(function(){
                          var roomSelected = $(this).val();
                          var optionsList;
                          var htmlString ="";
                          switch(roomSelected){
                            case "1":optionsList =one;
                            break;
                            case "2":optionsList=two;
                            break;
                            case "3":optionsList=three;
                            break;

                          }
                          for(var i = 0;i<optionsList.length;i++){
                            htmlString = htmlString+"<option value ='"+optionsList[i]+"'>"+optionsList[i]+"</option>";
                          }
                          $('#input-count').html(htmlString);
                        })
                      </script>
                      <div class="form-btn">
                        <button type="submit" class="submit-btn">Check availability</button>
                      </div>
                    </form>
