<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
          <div class="card-img-left d-none d-md-flex">
            <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Register</h5>
            <form action="/vendor/signup" method="post" id="signup-form">
              <label for="">username</label>
              <div class="form-floating mb-3">
                {{!-- <label for="">username</label> --}}
                <input type="text" class="form-control" id="floatingInputUsername" name="user" placeholder="myusername">
                {{!-- <label for="floatingInputUsername">Username</label> --}}
              </div>
              <label for="">License</label>
              <div class="form-floating mb-3">
                {{!-- <label for="">password</label> --}}
                <input type="number" class="form-control" id="floatingInputUsername" placeholder="Password"
                  name="license" required>
                {{!-- <label for="floatingPassword">Password</label> --}}

              </div>
              <label for="">email</label>
              <div class="form-floating mb-3">
                {{!-- <label for="">email</label> --}}
                <input type="email" class="form-control" id="floatingInputEmail" name="email"
                  placeholder="name@example.com">
                {{!-- <label for="floatingInputEmail">Email address</label> --}}
              </div>

                   {{#if logErr}}
        <p style="color: red;"> email already exists.</p>
        {{/if}}

              <hr>
              <label for="">password</label>
              <div class="form-floating mb-3">
                {{!-- <label for="">password</label> --}}
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                  name="password">
                {{!-- <label for="floatingPassword">Password</label> --}}

              </div>

              {{!-- <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPasswordConfirm" placeholder="Confirm Password"
                  name="cpassword">

                <label for="floatingPasswordConfirm">Confirm Password</label>
              </div> --}}

              <div class="d-grid mb-2">
                <button style="background-color: #03A9F4; color: white;"
                  class="btn btn-lg  btn-login fw-bold text-uppercase" type="submit">Register</button>
              </div>

              <a class="d-block text-center mt-2 small" href="/vendor/login">Have an account? Sign In</a>

              <hr class="my-4">


            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

