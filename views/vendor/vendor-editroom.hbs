  0.6; } @media (max-width: 576px) { .registration-form form { padding: 50px
  20px; } .registration-form .form-icon { width: 70px; height: 70px; font-size:
  30px; line-height: 70px; } form { padding: 50px; } }
</style>
<div class="registration-form" style="width: 80%;">
  <form action="/vendor/editroom/{{room.rooms.roomId}}" method="post" enctype="multipart/form-data">
    <div class="form-icon">
      <i class="bi bi-house-door-fill"></i>
    </div>
    <div class="form-group">
      <input
        type="number"
        class="form-control item"
        id=""
        name="number"
        placeholder="Contact No"
        value="{{room.rooms.number}}"
        required
      />
    </div>

    <div class="form-group">
      <input
        type="number"
        class="form-control item"
        id=""
        name="price"
        placeholder="Price"
        value="{{room.rooms.price}}"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="number"
        class="form-control item"
        id=""
        name="qty"
        placeholder="No of Rooms"
        value="{{room.rooms.quantity}}"
        required
      />
    </div>
    <div class="form-group">
      <select
        class="form-select"
        aria-label="Default select example"
        name="type"
      >
        <option>{{room.rooms.type}}</option>
        <option value="single">Single</option>
        <option value="double">Double</option>
        <option value="standard">Standard</option>
        <option value="delux">Delux</option>
        <option value="super delux">Super Delux</option>

      </select>
    </div>

    <div class="form-group" style="margin-left: 23px;">
      <label for="">Aminities</label>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckDefault"
          name="wifi"
          {{#if room.rooms.amenities.wifi}}
          checked
          {{/if}}
        
        />
        <label class="form-check-label" for="flexSwitchCheckDefault">
          Free wifi</label>
      </div>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckDefault"
          name="service"
            {{#if room.rooms.amenities.service}}
          checked
          {{/if}}
        />
        <label class="form-check-label" for="flexSwitchCheckDefault">Service
          24/7</label>
      </div>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckDefault"
          name="food"
            {{#if room.rooms.amenities.food}}
          checked
          {{/if}}
        />
        <label class="form-check-label" for="flexSwitchCheckDefault">Food
          service</label>
      </div>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          name="pool"
          id="flexSwitchCheckDefault"
            {{#if room.rooms.amenities.pool}}
          checked
          {{/if}}
        />
        <label
          class="form-check-label"
          for="flexSwitchCheckDefault"
        >Pool</label>
      </div>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckDefault"
          name="ac"
            {{#if room.rooms.amenities.ac}}
          checked
          {{/if}}
        />
        <label class="form-check-label" for="flexSwitchCheckDefault">AC</label>
      </div>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckDefault"
          name="tv"
            {{#if room.rooms.amenities.tv}}
          checked
          {{/if}}
        />
        <label class="form-check-label" for="flexSwitchCheckDefault">TV</label>
      </div>
    </div>

    <div class="mb-3 form-group">
      <label for="formFile" class="form-label">Upload image of the Room</label>
      <input
       
        class="form-control"
        type="file"
        id="formFile"
        name="image"
        
      />
    </div>
    <div class="mb-3 form-group">
      <input
      
        class="form-control"
        type="file"
        id="formFile"
        name="imageone"
      />
    </div>
    <div class="mb-3 form-group">
      <input
        
        class="form-control"
        type="file"
        id="formFile"
        name="imagetwo"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        class="form-control item"
        id=""
        placeholder="description"
        name="description"
        value="{{room.rooms.description}}"
        required
      />
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-block create-account">Edit Room</button>
    </div>
  </form>
</div>
<script>
  var Karnataka = ["Bangalore", "Shimoga", "Udupi"]; 
  var Kerala = ["Kannur","Kozhikode", "Malappuram"];
   var TamilNadu = ["Chennai", "Coimbatore","Madurai"];
    $("#inputState").change(function (){
       var StateSelected = $(this).val(); 
       var optionsList;
        var htmlString = "";
        switch (StateSelected) {
  case "Kerala": optionsList = Kerala;
   break;
   case "Karnataka": optionsList = Karnataka;
    break; 
   case "Tamil Nadu": optionsList = TamilNadu; 
   break;
    }
     for (var i = 0; i < optionsList.length; i++) {
        htmlString = htmlString + "<option value = '" + optionsList[i] + "' > " + optionsList[i] + "</option > ";
         }
  $("#inputDistrict").html(htmlString);
   });

</script>